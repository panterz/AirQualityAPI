{
  "name": "node-express-starter",
  "version": "1.0.0",
  "description": "Starter project for Node.js and Express microservice that works with Mapping Domain pipelines",
  "main": "dist/server.js",
  "scripts": {
    "start": "yarn run serve",
    "build-all": "npm-run-all build build-ts",
    "build-ts": "./node_modules/typescript/bin/tsc",
    "build": "npm-run-all clean transpile copy-files",
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css dist/",
    "test": "node ./node_modules/.bin/jest --coverage",
    "test-dev": "node ./node_modules/.bin/jest --runInBand --logHeapUsage --config jest.config.js ",
    "test-integration": "node ./node_modules/.bin/jest --runInBand --logHeapUsage --config jest.config.IT.js",
    "serve-debug": "nodemon --inspect=./dist/server.js",
    "serve": "node ./dist/server.js",
    "dev": "NODE_ENV=local npm-run-all build build-ts serve",
    "prod": "NODE_ENV=production npm-run-all build build-ts serve",
    "transpile": "babel ./src --out-dir dist",
    "clean": "rimraf dist",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve-debug\"",
    "watch:dev": "nodemon",
    "watch-ts": "./node_modules/typescript/.bin/tsc -w",
    "lint": "./node_modules/.bin/eslint .",
    "prettier-format": "node ./node_modules/.bin/prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.ros.gov.uk:mapping/starter/node-express-starter.git"
  },
  "keywords": [],
  "author": "Panagiotis Terzis",
  "license": "ISC",
  "dependencies": {
    "@elastic/ecs-winston-format": "^1.3.1",
    "compression": "^1.7.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-actuator": "^1.8.2",
    "express-validator": "^6.14.2",
    "helmet": "^6.0.0",
    "node-fetch": "^2.6.7",
    "serve-static": "^1.15.0",
    "swagger-ui-express": "^4.6.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@babel/cli": "7.19.3",
    "@babel/core": "7.20.2",
    "@babel/node": "7.20.2",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.18.6",
    "@types/bcrypt-nodejs": "0.0.31",
    "@types/compression": "1.7.2",
    "@types/concurrently": "6.4.0",
    "@types/errorhandler": "1.5.0",
    "@types/eslint": "8.4.10",
    "@types/express": "4.17.14",
    "@types/express-actuator": "1.8.0",
    "@types/jest": "29.2.2",
    "@types/node": "18.11.9",
    "@types/node-fetch": "2.6.2",
    "@types/request": "2.48.8",
    "@types/request-promise": "4.1.48",
    "@types/supertest": "2.0.12",
    "@types/swagger-ui-express": "4.1.3",
    "@typescript-eslint/eslint-plugin": "5.42.1",
    "@typescript-eslint/parser": "5.42.1",
    "concurrently": "7.5.0",
    "copyfiles": "2.4.1",
    "errorhandler": "1.5.1",
    "eslint": "8.27.0",
    "eslint-plugin-jest": "27.1.5",
    "jest": "29.3.1",
    "msw": "0.48.2",
    "nodemon": "2.0.20",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "supertest": "6.3.1",
    "swagger-autogen": "^2.22.0",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "nodemonConfig": {
    "exec": "yarn run dev",
    "watch": [
      "src/*",
      "public/*"
    ],
    "ext": "js,ts,json",
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  }
}
